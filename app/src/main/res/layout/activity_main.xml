<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sam_with_bass"/>

    <TextView
        style="@style/TopTextViewWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="11dp"
        android:text="@string/happy_val"/>

    <TextView
        android:id="@+id/TopViewOne"
        style="@style/TopTextViewCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:text="@string/happy_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TopViewOne"
        android:textSize="34sp"
        android:textColor="#B388FF"
        android:text="@string/heart"/>

    <TextView
        android:id="@+id/BottomViewOne"
        style="@style/BottomTextViewWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="12dp"
        android:text="@string/footer" />

    <TextView
        style="@style/BottomTextViewCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="13dp"
        android:text="@string/footer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/BottomViewOne"
        android:paddingBottom="10dp"
        android:paddingRight="7dp"
        android:textSize="34sp"
        android:textColor="#B388FF"
        android:text="@string/note"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/BottomViewOne"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:textSize="34sp"
        android:textColor="#B388FF"
        android:text="@string/note"/>

</RelativeLayout>
